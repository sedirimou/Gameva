                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
                
                {/* Dropdown Menu */}
                {showProductsDropdown && (
                  <div className="absolute top-full left-0 mt-1 w-72 bg-white rounded-lg shadow-xl border border-gray-200 py-2 z-[99999]">
                    <Link href="/category/all-products">
                      <div className="px-4 py-2 hover:bg-gray-100 cursor-pointer text-gray-800 font-medium border-b border-gray-100">
                        Browse All Products
                      </div>
                    </Link>
                    
                    {/* Categories Title */}
                    <div className="px-4 py-2 font-bold text-gray-800 text-sm uppercase tracking-wide border-b border-gray-100">
                      Categories
                    </div>
                    
                    {/* Dynamic Categories */}
                    {categories.map((category) => (
                      <CategoryDropdownItem key={category.id} category={category} />
                    ))}
                  </div>
                )}
              </div>
              
              {/* Store Link */}
              <Link href="/category/all-products">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium">
                  Store
                </div>
              </Link>
              
              <Link href="/deals">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium px-3 py-1.5 rounded-lg" style={{
                  background: 'linear-gradient(131deg, #99b476 0%, #29adb2 100%)',
                  boxShadow: '0 2px 8px rgba(0, 0, 0, 0.2)'
                }}>
                  Special Deals
                </div>
              </Link>
              
              <Link href="/category/new-releases">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium">
                  New Releases
                </div>
              </Link>
              
              <Link href="/category/best-sellers">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium">
                  Best Sellers
                </div>
              </Link>
            </div>
          </div>
        </div>
      </div>

      {/* Professional 1400px Wide Dropdown Menu */}
      {showProductsDropdown && (
                  <div 
                    ref={dropdownRef}
                    className="fixed left-1/2 transform -translate-x-1/2 shadow-2xl z-[99999]"
                    style={{ 
                      top: '72px', 
                      width: '1400px',
                      maxWidth: '1400px',
                      borderRadius: '16px',
                      border: 'none',
                      background: 'linear-gradient(135deg, #153e90 0%, #2c519b 50%, #29adb2 100%)'
                    }}
                  >
                    <div className="flex min-h-60">
                      {/* Column 1 - Main Categories */}
                      <div className="w-80 p-6 rounded-l-2xl" style={{ backgroundColor: 'rgba(255,255,255,0.1)' }}>
                        <div className="mb-4">
                          <h3 className="font-bold text-white text-lg">Categories</h3>
                        </div>
                        <div className="space-y-1">
                          {categories.length === 0 ? (
                            <div className="text-white/60 text-sm py-4">Loading categories...</div>
                          ) : (
                            categories.map((category) => (
                              <div key={category.id} className="group">
                                <div 
                                  onMouseEnter={() => {
                                    setSelectedCategory(category);
                                    setClickedSubcategory(null);
                                  }}
                                  onClick={() => {
                                    setSelectedCategory(category);
                                    setClickedSubcategory(null);
                                  }}
                                  className={`px-4 py-3 cursor-pointer rounded-lg flex items-center justify-between transition-colors group ${
                                    selectedCategory?.id === category.id 
                                      ? 'bg-white/30 text-white' 
                                      : 'text-white/90 hover:bg-white/20'
                                  }`}
                                >
                                  <Link href={category.link || `/category/${category.slug}`} className="flex items-center space-x-3 flex-1">
                                    <div className="flex items-center space-x-3">
                                      {category.icon && category.icon.startsWith('data:') && (
                                        <img src={category.icon} alt="" className="w-5 h-5 object-cover rounded" />
                                      )}
                                      <span className="font-medium text-sm">{category.name}</span>
                                      {category.show_product_count && (
                                        <span className="text-xs text-white/60">({category.product_count})</span>
                                      )}
                                    </div>
                                  </Link>
                                  {category.children && category.children.length > 0 && (
                                    <svg className="w-4 h-4 text-white/60 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                                    </svg>
                                  )}
                                </div>
                              </div>
                            ))
                          )}
                        </div>
                      </div>

                      {/* Column 2 - Subcategories (Only visible when main category is selected and has subcategories) */}
                      {selectedCategory && selectedCategory.children && selectedCategory.children.length > 0 && (
                        <div className="w-80 p-6 border-r border-white/20 text-white" style={{ background: '#153e8f' }}>
                          <div className="h-full flex flex-col">
                            <div className="mb-4">
                              <h3 className="font-bold text-white mb-2">{selectedCategory.name}</h3>
                            </div>
                            <div className="flex-1 overflow-hidden">
                              <div className="space-y-2">
                                {selectedCategory.children.map((subCategory) => (
                                  <div key={subCategory.id}>
                                    <div 
                                      onMouseEnter={() => {
                                        if (!clickedSubcategory) {
                                          setHoveredSubcategory(subCategory);
                                        }
                                      }}
                                      onMouseLeave={() => {
                                        if (!clickedSubcategory) {
                                          setHoveredSubcategory(null);
                                        }
                                      }}
                                      onClick={() => {
                                        setClickedSubcategory(subCategory);
                                        setHoveredSubcategory(null);
                                      }}
                                      className={`px-3 py-2 cursor-pointer text-sm rounded-lg transition-colors ${
                                        (clickedSubcategory?.id === subCategory.id) || (hoveredSubcategory?.id === subCategory.id && !clickedSubcategory)
                                          ? 'bg-white/30 text-white' 
                                          : 'text-white/90 hover:bg-white/20'
                                      }`}
                                    >
                                      <Link href={subCategory.link || `/category/${subCategory.slug}`} className="block w-full">
                                        {subCategory.name}
                                      </Link>
                                    </div>
                                  </div>
                                ))}
                                
                                {/* See All Button */}
                                <div className="mt-4 pt-3 border-t border-white/20">
                                  <Link href={selectedCategory.link || `/category/${selectedCategory.slug}`}>
                                    <div className="px-3 py-2 cursor-pointer text-sm rounded-lg transition-colors bg-white/10 hover:bg-white/20 text-white text-center font-medium">
                                      See All {selectedCategory.name}
                                    </div>
                                  </Link>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      )}

                      {/* Column 3 - Popular Products or Banner Carousel */}
                      <div className="flex-1 rounded-r-2xl overflow-hidden flex flex-col" style={{ background: '#153e8f' }}>
                        {selectedCategory && (clickedSubcategory || hoveredSubcategory) ? (
                          <PopularProductsSection 
                            category={clickedSubcategory || hoveredSubcategory} 
                            onNavigate={(url) => window.location.href = url}
                          />
                        ) : selectedCategory ? (
                          <PopularProductsSection 
                            category={selectedCategory} 
                            onNavigate={(url) => window.location.href = url}
                          />
                        ) : (
                          <BannerCarouselSection />
                        )}
                      </div>
                    </div>
                  </div>
                )}
              </div>

              <Link href="/deals">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium px-4 py-2 rounded-lg" style={{
                  background: 'linear-gradient(131deg, #99b476 0%, #29adb2 100%)',
                  boxShadow: '0 2px 8px rgba(0, 0, 0, 0.2)'
                }}>
                  Special Deals
                </div>
              </Link>
              <Link href="/category/new-releases">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium">
                  New Releases
                </div>
              </Link>
              <Link href="/category/best-sellers">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium">
                  Best Sellers
                </div>
              </Link>
            </div>
          </div>
        </div>
      </div>

      {/* Tablet Secondary Navigation */}
      <div 
        className={`hidden md:block lg:hidden text-white z-[99998] fixed top-[3.5rem] left-0 right-0 border-t border-white/10 transition-transform duration-300 ${
          isSecondaryNavVisible ? 'translate-y-0' : '-translate-y-full'
        }`} 
        style={{ backgroundColor: '#ffffff1a' }}
      >
        <div className="w-full flex justify-center bg-[#2c519b]">
          <div className="w-full max-w-[1200px] mx-auto px-6 py-2">
            <div className="flex items-center justify-start space-x-6">
              {/* Browse All Products Dropdown - Tablet */}
              <div className="relative">
                <div 
                  className="cursor-pointer hover:text-white/80 transition-colors font-medium text-sm flex items-center space-x-2"
                  onClick={() => setShowProductsDropdown(!showProductsDropdown)}
                >
                  <FontAwesomeIcon icon={faBars} className="w-5 h-5" />
                  <span>Categories</span>
                  <svg className="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
                
                {/* Dropdown Menu - Tablet */}
                {showProductsDropdown && (
                  <div className="absolute top-full left-0 mt-1 w-56 bg-white rounded-lg shadow-xl border border-gray-200 py-2 z-[99999]">
                    <Link href="/category/all-products">
                      <div className="px-4 py-2 hover:bg-gray-100 cursor-pointer text-gray-800 font-medium border-b border-gray-100 text-sm">
                        Browse All Products
                      </div>
                    </Link>
                    
                    {/* Categories Title */}
                    <div className="px-4 py-2 font-bold text-gray-800 text-xs uppercase tracking-wide border-b border-gray-100">
                      Categories
                    </div>
                    
                    {/* Dynamic Categories */}
                    {categories.map((category) => (
                      <CategoryDropdownItem key={category.id} category={category} isTablet={true} />
                    ))}
                  </div>
                )}
              </div>
              
              {/* Store Link - Tablet */}
              <Link href="/category/all-products">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium text-sm">
                  Store
                </div>
              </Link>
            </div>
          </div>
              <Link href="/deals">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium px-3 py-1.5 rounded-lg text-sm" style={{
                  background: 'linear-gradient(131deg, #99b476 0%, #29adb2 100%)',
                  boxShadow: '0 2px 8px rgba(0, 0, 0, 0.2)'
                }}>
                  Special Deals
                </div>
              </Link>
              <Link href="/category/new-releases">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium text-sm">
                  New Releases
                </div>
              </Link>
              <Link href="/category/best-sellers">
                <div className="cursor-pointer hover:text-white/80 transition-colors font-medium text-sm">
                  Best Sellers
                </div>
              </Link>
            </div>
          </div>
        </div>
      </div>

      {/* Mobile Search Dropdown - Fixed positioning for all mobile screen sizes */}
      {showDropdown && (
        <div 
          className="fixed left-3 right-3 bg-[#153e90] rounded-lg shadow-xl border border-gray-200 max-h-96 overflow-hidden md:hidden"
          style={{ 
            top: '120px',
            zIndex: 99999999
          }}
        >
          <SearchDropdown
            searchResults={searchResults}
            searchHistory={searchHistory}
            isSearching={isSearching}
            error={error}
            searchTerm={searchTerm}
            onResultSelect={handleResultSelect}
            onHistorySelect={handleHistorySelect}
            onClose={hideSearchDropdown}
          />
        </div>
      )}

      {/* Mobile Navigation Sidebar */}
      {isMobileMenuOpen && (
        <>
          {/* Overlay */}
          <div
            className="fixed inset-0 bg-black bg-opacity-50 z-[99999998] md:hidden"
            onClick={() => setIsMobileMenuOpen(false)}
          />
          
          {/* Sidebar */}
          <div
            className="fixed top-0 left-0 h-full w-80 text-white z-[99999999] overflow-y-auto md:hidden"
            style={{ backgroundColor: '#153e90' }}
          >
            <div className="p-6">
              <div className="flex justify-between items-center mb-8">
                <h2 className="text-xl font-bold">Menu</h2>
                <button
                  onClick={() => setIsMobileMenuOpen(false)}
                  className="p-2 rounded-full bg-white/10 hover:bg-white/20 transition-colors"
                >
                  <X className="h-5 w-5" />
                </button>
              </div>

              {/* Navigation Links */}
              <div className="space-y-4">
                <Link href="/" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Home
                </Link>
                
                {/* Products Section */}
                <div className="space-y-2">
                  <div className="py-2 px-4 text-white/80 font-semibold text-sm">Products</div>
                  
                  {/* Categories */}
                  <div className="py-1 px-6 text-white/60 text-xs">Categories</div>
                  {categories.map((category) => (
                    <div key={category.id} className="space-y-1">
                      <Link href={category.link || `/category/${category.slug}`} className="flex items-center space-x-2 py-2 px-8 rounded-lg hover:bg-white/10 transition-colors text-sm" onClick={() => setIsMobileMenuOpen(false)}>
                        {category.icon && category.icon.startsWith('data:') && (
                          <img src={category.icon} alt="" className="w-4 h-4 object-cover rounded" />
                        )}
                        <span>{category.name}</span>
                      </Link>
                      {category.children && category.children.map((subCategory) => (
                        <Link key={subCategory.id} href={subCategory.link || `/category/${subCategory.slug}`} className="block py-1.5 px-10 rounded-lg hover:bg-white/10 transition-colors text-xs text-white/80" onClick={() => setIsMobileMenuOpen(false)}>
                          {subCategory.name}
                        </Link>
                      ))}
                    </div>
                  ))}
                </div>

                <Link href="/deals" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Special Deals
                </Link>
                <Link href="/category/new-releases" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  New Releases
                </Link>
                <Link href="/category/best-sellers" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Best Sellers
                </Link>
                <Link href="/cart" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Cart
                </Link>
                <Link href="/wishlist" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Wishlist
                </Link>
                <Link href="/auth/login" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Login
                </Link>
                <Link href="/auth/register" className="block py-3 px-4 rounded-lg hover:bg-white/10 transition-colors" onClick={() => setIsMobileMenuOpen(false)}>
                  Sign Up
                </Link>
              </div>
            </div>
          </div>
        </>
      )}
    </>
  );
}