// AllProductsSection Component - displays categories on left, banner on right
function AllProductsSection() {
  const [bannerImages, setBannerImages] = useState([]);
  const [currentSlide, setCurrentSlide] = useState(0);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const fetchData = async () => {
      try {
        // Fetch banner images from dedicated banner API
        const bannerResponse = await fetch('/api/banner');
        if (bannerResponse.ok) {
          const bannerData = await bannerResponse.json();
          if (bannerData.banner && bannerData.banner.images) {
            // Filter out empty banner images
            const validImages = bannerData.banner.images.filter(img => img && img.trim() !== '');
            setBannerImages(validImages);
          }
        }
        
      } catch (error) {
        console.error('Error fetching banner data:', error);
      } finally {
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  // Auto-slide carousel every 3 seconds
  useEffect(() => {
    if (bannerImages.length <= 1) return;

    const interval = setInterval(() => {
      setCurrentSlide(prev => (prev + 1) % bannerImages.length);
    }, 3000);

    return () => clearInterval(interval);
  }, [bannerImages.length]);

  if (loading) {
    return (
      <div className="h-full bg-[#153e8f] text-white flex items-center justify-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-white"></div>
      </div>
    );
  }

  // Show carousel if multiple images, single image if only one, empty if none
  if (bannerImages.length === 0) {
    return (
      <div className="h-full bg-[#153e8f] flex items-center justify-center">
        <p className="text-white/70">No banner configured</p>
      </div>
    );
  }

  return (
    <div className="h-full bg-[#153e8f] relative overflow-hidden">
      {/* Carousel Images */}
      <div 
        className="flex transition-transform duration-500 ease-in-out h-full"
        style={{ transform: `translateX(-${currentSlide * 100}%)` }}
      >
        {bannerImages.map((image, index) => (
          <div key={index} className="min-w-full h-full">
            <img 
              src={image} 
              alt={`Banner ${index + 1}`} 
              className="w-full h-full object-cover"
            />
          </div>
        ))}
      </div>

      {/* Carousel Indicators (only show if multiple images) */}
      {bannerImages.length > 1 && (
        <div className="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
          {bannerImages.map((_, index) => (
            <button
              key={index}
              onClick={() => setCurrentSlide(index)}
              className={`w-2 h-2 rounded-full transition-colors ${
                index === currentSlide ? 'bg-white' : 'bg-white/50'
              }`}
            />
          ))}
        </div>
      )}
    </div>
  );
}

// PopularProductsSection Component
function PopularProductsSection({ category, onNavigate }) {
  const [popularProducts, setPopularProducts] = useState([]);
  const [loading, setLoading] = useState(false);

  useEffect(() => {
    console.log('PopularProductsSection useEffect:', { 
      categoryId: category?.id, 
      displayType: category?.main_menu_display_type,
      categoryName: category?.name 
    });
    if (category && category.id && category.main_menu_display_type === 'products') {
      fetchPopularProducts(category.id);
    }
  }, [category]);

  const fetchPopularProducts = async (categoryId) => {
    setLoading(true);
    try {
      console.log('Fetching popular products for categoryId:', categoryId);
      const response = await fetch(`/api/main-menu/popular-products?categoryId=${categoryId}`);
      const data = await response.json();
      console.log('Popular products response:', data);
      setPopularProducts(data.products || []);
    } catch (error) {
      console.error('Error fetching popular products:', error);
      setPopularProducts([]);
    } finally {
      setLoading(false);
    }
  };

  // Display category image if display type is 'image'
  if (category.main_menu_display_type === 'image' && category.category_image && category.category_image.startsWith('data:')) {
    return (
      <Link href={category.link || `/category/${category.slug}`}>
        <div className="w-full h-full cursor-pointer flex">
          <img 
            src={category.category_image} 
            alt={category.name}
            className="w-full h-full object-cover"
          />
        </div>
      </Link>
    );
  }

  // Display banner if available
  if (category.banner && category.banner.startsWith('data:')) {
    return (
      <Link href={category.link || `/category/${category.slug}`}>
        <div className="w-full h-full cursor-pointer flex">
          <img 
            src={category.banner} 
            alt={category.name}
            className="w-full h-full object-cover"
          />
        </div>
      </Link>
    );
  }

  // Display popular products
  if (popularProducts.length > 0) {
    return (
      <div className="h-full p-6 text-white" style={{ background: '#153e8f' }}>
        <div className="h-full flex flex-col">
          <div className="mb-4 flex items-center justify-between">
            <div>
              {category.main_menu_description && (
                <p className="text-sm opacity-90">{category.main_menu_description}</p>
              )}
            </div>
            <div 
              onClick={() => onNavigate && onNavigate(category.link || `/category/${category.slug}`)}
              className="text-white px-4 py-2 rounded-lg font-medium text-sm transition-colors cursor-pointer" 
              style={{ 
                background: 'linear-gradient(135deg, rgba(41, 173, 178, 0.3) 0%, rgba(153, 180, 118, 0.3) 100%)', 
                boxShadow: '0 8px 32px rgba(41, 173, 178, 0.4)' 
              }}
            >
              Browse All
            </div>
          </div>
          
          <div className="flex-1 overflow-hidden">
            <div className="grid grid-cols-4 gap-3 h-full">
              {popularProducts.slice(0, 4).map((product) => (
                <Link key={product.id} href={`/product/${product.slug || product.id}`}>
                  <div className="bg-white/10 rounded-lg p-2 hover:bg-white/20 transition-colors cursor-pointer h-full flex flex-col">
                    <div className="aspect-square bg-white/5 rounded mb-2 overflow-hidden">
                      <img 
                        src={product.images_cover_url || '/placeholder-game.svg'} 
                        alt={product.name}
                        className="w-full h-full object-cover"
                      />
                    </div>
                    <div className="flex-1 flex flex-col justify-between">
                      <h4 className="text-xs font-medium text-white line-clamp-2 mb-1">{product.name}</h4>
                      <div className="text-xs font-bold text-green-300">â‚¬{product.price}</div>
                    </div>
                  </div>
                </Link>
              ))}
            </div>
          </div>
        </div>
      </div>
    );
  }

  // Fallback to category-specific message if no popular products
  return (
    <div className="h-full p-6 text-white flex items-center justify-end" style={{ background: '#153e8f' }}>
      <Link href={category.link || `/category/${category.slug}`}>
        <div className="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg font-medium text-sm hover:bg-white/30 transition-colors cursor-pointer border border-white/30">
          Browse All
        </div>
      </Link>
    </div>
  );
}

// BannerCarouselSection Component - displays rotating banners
function BannerCarouselSection() {
  const [bannerImages, setBannerImages] = useState([]);
  const [currentSlide, setCurrentSlide] = useState(0);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const fetchBannerData = async () => {
      try {
        const response = await fetch('/api/banner');
        if (response.ok) {
          const data = await response.json();
          if (data.banner && data.banner.images) {
            // Filter out empty banner images
            const validImages = data.banner.images.filter(img => img && img.trim() !== '');
            setBannerImages(validImages);
          }
        }
      } catch (error) {
        console.error('Error fetching banner data:', error);
      } finally {
        setLoading(false);
      }
    };

    fetchBannerData();
  }, []);

  // Auto-slide carousel every 3 seconds
  useEffect(() => {
    if (bannerImages.length <= 1) return;

    const interval = setInterval(() => {
      setCurrentSlide(prev => (prev + 1) % bannerImages.length);
    }, 3000);

    return () => clearInterval(interval);
  }, [bannerImages.length]);

  if (loading) {
    return (
      <div className="h-full flex items-center justify-center">
        <div className="text-white/60">Loading banners...</div>
      </div>
    );
  }

  if (bannerImages.length === 0) {
    return (
      <div className="h-full flex items-center justify-center">
        <div className="text-white/60">No banners available</div>
      </div>
    );
  }

  return (
    <div className="h-full relative overflow-hidden">
      {/* Banner Images */}
      <div className="relative h-full">
        {bannerImages.map((image, index) => (
          <div
            key={index}
            className={`absolute inset-0 transition-opacity duration-500 ${
              index === currentSlide ? 'opacity-100' : 'opacity-0'
            }`}
          >
            <img
              src={image}
              alt={`Banner ${index + 1}`}
              className="w-full h-full object-cover"
            />
          </div>
        ))}
      </div>

      {/* Navigation Indicators (only show if more than 1 banner) */}
      {bannerImages.length > 1 && (
        <div className="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
          {bannerImages.map((_, index) => (
            <button
              key={index}
              onClick={() => setCurrentSlide(index)}
              className={`w-2 h-2 rounded-full transition-colors ${
                index === currentSlide ? 'bg-white' : 'bg-white/50'
              }`}
            />
          ))}
        </div>
      )}
    </div>
  );
}

